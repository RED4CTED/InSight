{
  "manifest_version": 3,
  "name": "InSight",
  "version": "1.0",
  "description": "Extract text from screenshots and send to AI",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs",
    "notifications"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "action": {
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["detect-browser.js", "content.js"],
      "css": ["selector.css"]
    }
  ],
  "web_accessible_resources": [
  {
    "resources": [
      "popup.html", 
      "popup.css", 
      "popup.js", 
      "script-loader.js", 
      "panel-styles.css",
      "panel.html",
      "panel.js"
    ],
    "matches": ["<all_urls>"]
  }
],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}